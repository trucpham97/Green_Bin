<div class="badge rounded-pill fs-6
  <% if recycling_spot.tag_list == ["glass", "plastic", "paper", "aluminum", "house waste", "metal"] %>
    bg-danger-subtle
  <% elsif recycling_spot.tag_list == ["glass", "plastic", "paper", "aluminum", "house waste", "metal", "household applicances", "batteries"] %>
    bg-primary-subtle
  <% elsif recycling_spot.tag_list == ["compost"] %>
    bg-success-subtle
  <% elsif recycling_spot.tag_list == ["plastic"] %>
    bg-warning
  <% elsif recycling_spot.tag_list == ["glass"] %>
    bg-success
  <% elsif recycling_spot.tag_list == ["house waste"] %>
    bg-secondary bg-gradient
  <% else %>
    bg-tertiary
  <% end %> ">
  <%= image_tag "pin.svg", height: 20, width: 20, alt: "poubelle tri" %>
</div>

<h1 class="text-center big-title historic">Historique</h1>
<h2 class="text-center sub-title month">Juin</h2>
<div class="homepage-container-index-product">

  <% @products.reverse_each do |product| %>

    <%= link_to product_path(product), class: "product-link" do %>

      <div class="index-card">
        <%= image_tag product.image_url, class: "small-square-image product-image"%>

        <div class="text-align-column-left">
          <p class="p-no-margin-index product-index-name"><%= product.name %></p>
          <p class="p-no-margin-index material-gellule" style="background-color:
            <%= display_material(product)[:color] %>; color:<%= display_material(product)[:text]%>">
            <%= display_material(product)[:name] %>
          </p>
        </div>

          <%= form_with url: product_path(product), method: :delete, local: true do %>
            <button type="submit" style="background: none; border: none;">
              <i class="fa-solid fa-map-location-dot small-bin-icon ghost-icon"></i>
            </button>
          <% end %>

      </div>
    <% end %>
  <% end %>

</div>
